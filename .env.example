# ── Application ──────────────────────────────────────
PORT=3000
NODE_ENV=production
SESSION_SECRET=change-me-to-a-random-64-char-string

# ── Database ─────────────────────────────────────────
DB_PASSWORD=change-me-to-a-strong-password
DATABASE_URL=postgresql://leafedit:${DB_PASSWORD}@postgres:5432/leafedit

# ── Redis ────────────────────────────────────────────
REDIS_URL=redis://redis:6379

# ── Compilation ──────────────────────────────────────
COMPILER_IMAGE=leafedit-compiler
MAX_CONCURRENT_BUILDS=5
COMPILE_TIMEOUT=120
COMPILE_MEMORY=1g
COMPILE_CPUS=1.5

# ── Storage ──────────────────────────────────────────
STORAGE_PATH=/data

# ── Auth ─────────────────────────────────────────────
DISABLE_SIGNUP=false
SESSION_EXPIRY_DAYS=7
